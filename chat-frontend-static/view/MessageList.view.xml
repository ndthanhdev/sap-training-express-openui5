<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          controllerName="chatApp.controller.MessageList">
    <List
            class="sapUiResponsiveMargin"
            width="auto"
            items="{message>/Messages}">
        <items>
            <NotificationListItem
                    title="{message>message}"
                    datetime="{
                        path:'message>dateTime',
                        formatter:'.formatter.formatDateTime'
                    }"
                    authorName="{message>nickName}"
                    showCloseButton="false"/>
        </items>
    </List>
</mvc:View>
