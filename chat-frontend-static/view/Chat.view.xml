<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:chatApp="chatApp."
          controllerName='chatApp.controller.Chat'>
    <Page title="{i18n>appName}"
          showNavButton="true"
          navButtonPress="onNavBack">
        <content>
            <mvc:XMLView viewName="chatApp.view.ChatPanel" logout="onLogout"/>
            <mvc:XMLView viewName="chatApp.view.MessageList"/>
        </content>
    </Page>
</mvc:View>
